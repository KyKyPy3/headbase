<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"> 
<html>
<head>
  <title>Nerdbase</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<ul id="navigation">
        <li class="home"><a href="#" title="Home"></a></li>
        <li class="about"><a href="#" title="About"></a></li>
        <li class="search"><a href="#" title="Search"></a></li>
    </ul>

	<div id="header">
		<div class="center">
			<img src="/assets/nerdbase.png">
			<img src="/assets/nerdbase3_new.png" style="padding-bottom:1em;">
		</div>
		<div class="center" id="menu">
			<ul>
				<li class="current"><a href="index_new.html">Home</a></li>
		  		<li><a href="people_new.html">Nerds</a></li>
		    	<li><a href="projects_new.html">Ideas</a></li>
		    	<li><a href="blog_new.html">Blogs</a></li>
		    	<li><a href="about_new.html">About</a></li>
			</ul>
		</div>
	</div>
	
	<div class="center">
		<div style="width:650px;float:left;">
			<form id="searchForm" method="post">
				<fieldset>
					<input id="s" type="text" />
					<a href="login" id="submitButton" class="signin">Search</a>
				</fieldset>
			</form>
		</div>
		<div id="container">
			<div id="topnav" class="topnav"><a href="login" class="signin"><span>Sign in</span></a></div>
			<fieldset id="signin_menu">
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => 'signin' }) do |f| %>
				  <p><%= f.label :email %>
				  <%= f.email_field :email %></p>

				  <p ><%= f.label :password %>
				  <%= f.password_field :password %></p>

				  <p class="remember">
				  <% if devise_mapping.rememberable? -%>
					<%= f.submit "Sign in", :html => {:id => :signin } %>
				    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
				  <% end -%>
				  </p>
				  <p class="forgot">
				    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
				  </p>
				<% end %>
			</fieldset>
			<div id="user_nav">
				<% if user_signed_in? %>
				    Signed in as <%= current_user.email %>.
				    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
				  <% end %>
			</div>
		</div>
	</div>
	<div class="clear"></div>
	
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

<%= yield %>

	<div class="footer">
		<div class="menu">
			<a href="#">Contact</a><b>|</b><a href="#">Term Of Service</a><b>|</b><a href="#">Privacy</a>
		</div>
		<div class="copyright">Copyright 2011 by Nerdbase. All rights reserved.</div>
	</div>
</body>
</html>
